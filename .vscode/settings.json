{
  "window.zoomLevel": 1,
  "breadcrumbs.enabled": false,
  "editor.fontSize": 14,
  "debug.console.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.glyphMargin": false,
  "workbench.activityBar.location": "top",
  "editor.lineNumbers": "on",
  "files.eol": "\n", // Final de linha sempre ser√° LF
  "workbench.editor.labelFormat": "short", // Formato curto para nomes de abas
  "editor.tabSize": 2, // Tamanho da tabula√ß√£o
  "explorer.compactFolders": false, // Mostrar todas as pastas na √°rvore de arquivos

  // Configura√ß√µes do Code Runner
  // Limpar sa√≠da anterior ao rodar o c√≥digo
  "code-runner.clearPreviousOutput": true,

  // Rodar no terminal integrado
  "code-runner.runInTerminal": true,

  // Ignorar sele√ß√£o de c√≥digo
  "code-runner.ignoreSelection": true,

  // Comando para rodar arquivos TypeScript (nesse caso o mesmo camando para rodar o tsx no terminal)
  "code-runner.executorMap": {
    "typescript": "clear; npx tsx"
  },

  // üõ† Formata√ß√£o e Lint
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true
}
